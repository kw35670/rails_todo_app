<div class="container signup-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>

    <h2 class="signup-title">Ruby_todo_app</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="signup-form-field">
        <%= f.label :nickname, "ニックネーム", class: "signup-form-field-label" %>
        <%= f.text_field :nickname, autocomplete: "nickname", placeholder: "ほげ山　ほげ太郎", class: "signup-form-field-input" %>
    </div>

    <div class="signup-form-field">
        <%= f.label :email, "メールアドレス", class: "signup-form-field-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "signup-form-field-input" %>
    </div>

    <div class="signup-form-field">
        <%= f.label :password, "パスワード", class: "signup-form-field-label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "8文字以上の半角英数字", class: "signup-form-field-input" %>
    </div>

    <div class="signup-form-field">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "signup-form-field-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "8文字以上の半角英数字", class: "signup-form-field-input" %>
    </div>

    <div class="signup-form-button">
        <%= f.submit "新規登録" %>
    </div>
    <% end %>
</div>
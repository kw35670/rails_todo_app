<div class="container team-edit-container">
  <div class="team-edit-form-container">
    <h2 class="team-edit-form-title">
      チーム追加
    </h2>
    <% if @team.errors.any? %>
    <div class="error-messages">
      <ul>
        <% @team.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with model: @team, class: "team-edit-form", local: true do |f| %>
    <div class="team-edit-label-container">
      <%= f.label :name, "チーム名", class: "team-edit-form-label" %>
      <%= f.text_field :name, class: "team-edit-form-input", placeholder: "例）開発チーム" %>
    </div>
    <div class="team-edit-button-container">
      <%= link_to "戻る", team_tasks_path(@team), class: "team-edit-form-back-button" %>
      <%= f.submit "追加", class: "team-edit-form-button"%>
    </div>
    <% end %>
  </div>
</div>
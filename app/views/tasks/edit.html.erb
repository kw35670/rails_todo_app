<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">タスク編集</h2>
        </div>
        <div class="card-body">
            <%= form_with(model: @task, local: true) do |form| %>
            <% if @task.errors.any? %>
            <div class="alert alert-danger">
                <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
                <ul>
                    <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>

            <div class="mb-3">
                <%= form.label :title, "タイトル", class: "form-label" %>
                <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :description, "説明", class: "form-label" %>
                <%= form.text_area :description, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :due_date, "期限", class: "form-label" %>
                <%= form.date_field :due_date, class: "form-control" %>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <%= form.check_box :completed, class: "form-check-input" %>
                    <%= form.label :completed, "完了", class: "form-check-label" %>
                </div>
            </div>

            <div class="actions">
                <%= form.submit "更新", class: "btn btn-primary" %>
                <%= link_to 'キャンセル', tasks_path, class: 'btn btn-secondary' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
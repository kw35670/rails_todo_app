<div class="container task-edit-container">
  <h2 class="task-edit-title">タスク追加</h2>

  <% if @task.errors.any? %>
  <div class="error-messages">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="task-edit-form-container">
    <%= form_with(model: @task, local: true, class: "task-edit-form") do |f| %>
    <div class="task-edit-form-text-field-container">
      <%= f.label :name, "タイトル", class: "task-edit-form-label" %>
      <%= f.text_field :name, placeholder: "例：資料作成", class: "task-edit-form-text-field" %>
    </div>
    <div class="task-edit-form-select-container">
      <%= f.label :status, "ステータス", class: "task-edit-form-label" %>
      <%= f.select :status,
                [
                    ["未完了", :not_started],
                    ["着手", :in_progress],
                    ["完了", :completed]
                ],
                { selected: @task.status || :not_started },
                { class: "task-edit-form-select" } %>
    </div>
    <div class="task-edit-form-select-container">
      <%= f.label :team_id, "チーム", class: "task-edit-form-label" %>
      <%= f.select :team_id,
                current_user.teams.map { |team| [team.display_name, team.id] },
                { selected: @task.team_id },
                { class: "task-edit-form-select" } %>
    </div>
    <div class="task-edit-form-button-container">
      <%= link_to '戻る', @team ? team_tasks_path(@team) : tasks_path, class: 'task-edit-form-back-button' %>
      <%= f.submit "追加", class: 'task-edit-form-add-button' %>
    </div>
    <% end %>
  </div>
</div>